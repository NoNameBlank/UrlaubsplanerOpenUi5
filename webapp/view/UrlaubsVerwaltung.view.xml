<mvc:View controllerName="urlaubsplaner.urlaubsplaner.controller.UrlaubsVerwaltung" xmlns="sap.ui.table" xmlns:mvc="sap.ui.core.mvc" xmlns:u="sap.ui.unified" xmlns:c="sap.ui.core" xmlns:m="sap.m" height="100%">
    <m:Page showHeader="false" enableScrolling="false" class="sapUiContentPadding">
        <m:content>
            <Table id="table" selectionMode="MultiToggle" rows="{path: 'oVacationModel>/urlaubsantraege'}" visibleRowCount="7" sort="sortDeliveryDate" ariaLabelledBy="title" type="Transperent">
                <extension>
                    <m:OverflowToolbar style="Clear">
                        <m:Title id="title" text="Urlaubs Verwaltung" />
                        <m:ToolbarSpacer />
                        <m:Button id = "editBtn" icon="sap-icon://user-edit" tooltip="Benutzer bearbeiten" press="onEdit" />
						<m:Button id = "buchen" icon="sap-icon://accept" tooltip="Urlaub gehnemigen" visible="false" />
						<m:Button id = "ablehnen" icon="sap-icon://cancel" tooltip="Urlaub ablehnen" visible="false" />
						<m:Button id = "zurueck" icon="sap-icon://nav-back" tooltip="ZurÃ¼ck" press="onBack" visible="false" />
						
                    </m:OverflowToolbar>
                </extension>
                <columns >
                    <Column width="auto" >
                        <m:Label text="Mitarbeiter" />
                        <template>
                            <m:Link text="{oVacationModel>name}" />
                        </template>
                    </Column>
                    <Column id="name" width="auto" sortProperty="name">
                        <m:Label text="Urlaubs Start:" />
                        <template>
                            <!-- <m:Text text="{oTeamModel>/appointments/title}" wrapping="false" /> -->
                            <m:Text text="{oVacationModel>start}" wrapping="false" />
                            <!-- <m:Text text="{= ${sDatumFormatiert}}" wrapping="false"/> -->
                        </template>
                    </Column>
                    <Column id="categories" width="auto" showSortMenuEntry="false" sortProperty="Category">
                        <m:Label text="Urlaub Bis:" />
                        <template>
                            <!-- <Text text="{
											path: '/date',
											type: 'sap.ui.model.type.Date',
											formatOptions: {
					          				style: 'short'
															}
											}" /> -->
                            <m:Text text="{oVacationModel>end}" wrapping="false" />
                        </template>
                    </Column>
                    <Column width="auto">
                        <m:Label text="Gesamt Urlaub" />
                        <template>
                            <m:Text text="{oVacationModel>vacation}" wrapping="false" />
                        </template>
                    </Column>
                    <Column id="quantity" width="auto" sortProperty="Quantity">
                        <m:Label text="Rest Jahr Urlaub" />
                        <template>
                            <m:Text text="{oVacationModel>vacationLeft}" wrapping="false" />
                        </template>
                    </Column>
                    <Column id="deliverydate" width="auto" sortProperty="DeliveryDateStr">
                        <m:Label text="Beantrage Tage" />
                        <template>
                            <m:Text text="{oVacationModel>vacationPlaned}" wrapping="false" />
                        </template>
                    </Column>
                    <!-- <Column width="auto">
						<m:Label text="Foto" />
						<template>
							<m:Link text="MA Show Image" href="{ProductPicUrl}" target="_blank"/>
						</template>
					</Column> -->
                </columns>
                <footer>
                    <m:OverflowToolbar id="infobar" />
                </footer>
            </Table>
        </m:content>
    </m:Page>
</mvc:View>
