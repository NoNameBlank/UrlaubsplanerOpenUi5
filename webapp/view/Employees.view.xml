<mvc:View controllerName="urlaubsplaner.urlaubsplaner.controller.Employees" 
	xmlns="sap.ui.table"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:u="sap.ui.unified"
	xmlns:c="sap.ui.core"
	xmlns:m="sap.m"
	height="100%">
	<m:Page
		showHeader="true" 
		showNavButton="true" 
		title="Nutzerdaten" 
		navButtonPress=".onNavBack"
		enableScrolling="false"
		class="sapUiContentPadding">
		<m:content>
			<Table
				id="table"
				selectionMode="MultiToggle"
				rows="{oTeamModel>/people}"
				visibleRowCount="7"
				sort="sortDeliveryDate"
				ariaLabelledBy="title">
				<extension>
					<m:OverflowToolbar style="Clear">
						<m:Title id="title" text="Mitarbeiter Verwaltung"/>
						<m:ToolbarSpacer/>
						<m:Button
							icon="sap-icon://user-edit"
							tooltip="Benutzer bearbeiten"
							press="bearbeiten"/>
						
						
						<m:Button
							icon="sap-icon://sort"
							tooltip="Sort Categories in addition to current sorting"
							press="sortCategories"/>
						<m:Button
							icon="sap-icon://decline"
							tooltip="Clear all sortings"
							press="clearAllSortings"/>
					</m:OverflowToolbar>
				</extension>
				<columns>
					<Column width="auto">
						<m:Label text="ID" />
						<template>
							<m:Text text="{oTeamModel>id}" wrapping="false"/>
						</template>
					</Column>
					<Column
						id="name"
						width="auto"
						sortProperty="name">
						<m:Label text="Mitarbeiter" />
						<template>
							<m:Text text="{oTeamModel>name}" wrapping="false" />
						</template>
					</Column>
					<Column
						id="categories"
						width="auto"
						showSortMenuEntry="false"
						sortProperty="Category">
						<m:Label text="Position" />
						<template>
							<m:Text text="{oTeamModel>role}" wrapping="false"  />
						</template>
					</Column>
					<Column width="auto">
						<m:Label text="Gesamt Urlaub" />
						<template>
							<m:Text text="{oTeamModel>vacation}" wrapping="false"  />
						</template>
					</Column>
					<Column
						id="quantity"
						width="auto"
						
						sortProperty="Quantity">
						<m:Label text="Rest Jahr Urlaub" />
						<template>
							<m:Text text="{oTeamModel>vacationLastYear}" wrapping="false"  />
						</template>
					</Column>
					<Column
						id="deliverydate"
						width="auto"
						sortProperty="DeliveryDateStr">
						<m:Label text="Notiz" />
						<template>
							<m:Text text="Keine Notiz" />
						</template>
					</Column>
				</columns>
				<footer>
					<m:OverflowToolbar id="infobar"></m:OverflowToolbar>
				</footer>
			</Table>
		</m:content>
	</m:Page>
</mvc:View>